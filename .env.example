VPS_HOST=your.vps.hostname.or.ip
VPS_USER=your_vps_username
VPS_SSH_KEY_PATH=/path/to/your/ssh/key

# Database
DB_USER=scaleuser
DB_PASSWORD=your_secure_password
DB_NAME=scale_production

# Redis
REDIS_PASSWORD=your_redis_password

# MQTT
MQTT_USERNAME=scaledevice
MQTT_PASSWORD=your_mqtt_password

# Auth
BETTER_AUTH_SECRET=your_64_char_random_string
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# Domains
BACKEND_DOMAIN=api.yourdomain.com
FRONTEND_DOMAIN=app.yourdomain.com
MONITORING_DOMAIN=monitoring.yourdomain.com

# SSL
ACME_EMAIL=admin@yourdomain.com

# Monitoring
GRAFANA_ADMIN_PASSWORD=your_grafana_password
MONITORING_HTPASSWD=admin:$apr1$... # Generate: htpasswd -nb admin password

# GitHub
GITHUB_REPOSITORY_OWNER=your-github-username
BACKEND_VERSION=latest
FRONTEND_VERSION=latest

# Build-time variables (for frontend)
NEXT_PUBLIC_API_URL=https://api.yourdomain.com
NEXT_PUBLIC_WS_URL=wss://api.yourdomain.com
